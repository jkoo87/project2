    <%= f.label "Tag", class: "formTextLabel" %>
  </div>
      <div class="formDiv">
        <% @categories.each do |category| %>
        <%= link_to image_tag(category.img_url, class: "categoryImageTag") %>
        <% end %>
      </div>


 -->






  <div class="formDiv">
    <%= f.label "Allows Reviews", class: "formTextLabel"  %>
    <%= f.label "Yes", class: "radioButtonLabel"  %>
    <%= f.radio_button :allow_reviews, "true" %>
    <%= f.label "No", class: "radioButtonLabel"  %>
    <%= f.radio_button :allow_reviews, "false" %>
  </div>



    <div class="formDiv">
      <%= f.label "Ingredients(w/o order number)", class: "formTextLabel" %>
    </div>
    <input id="ingredientFormCheckBox" type="checkbox" checked="checked">Hide<label for="ingredientFormCheckBox">
        <%= f.fields_for :ingredients do |ingredient| %>
            <div class="formDiv">
              <%= ingredient.text_field :list, class: "formTextInput" %>
            </div>
        <% end %>
    </label>



  <div class="formDiv">
    <%= f.label "Directions(w/o order number)", class: "formTextLabel" %>
  </div>
  <input id="DirectionFormCheckBox" type="checkbox" checked="checked">Hide<label for="DirectionFormCheckBox">
      <%= f.fields_for :directions do |direction| %>
          <div class="formDiv">
            <%= direction.text_area :recipe_direction, class: "formTextInput" %>
          </div>
      <% end %>
      </label>




  <div class="formDiv">
    <%= f.submit "Save", class: "submitButton" %>
  </div>


<% end  %>
</div>
